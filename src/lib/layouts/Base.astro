---
import './base.css';
import './layer.css';
import favicon from '../favicon.svg?url';
import interVariable from '@fontsource-variable/inter/files/inter-latin-opsz-normal.woff2?url';
import interVariableItalic from '@fontsource-variable/inter/files/inter-latin-opsz-italic.woff2?url';

export const blogRSSTitle = "Kendell's blog";

interface Props {
  title: string;
}
const { title } = Astro.props;

const html = await Astro.slots.render('default');
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="accent-color" content="#bbc3ff" />
    <link rel="icon" href={favicon} />
    <title>{title}</title>

    <link rel="preload" href={interVariable} as="font" type="font/woff2" crossorigin />
    {
      html.includes('<em') && (
        <link
          rel="preload"
          href={interVariableItalic}
          as="font"
          type="font/woff2"
          crossorigin
          fetchpriority="low"
        />
      )
    }

    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    {
      Astro.url.pathname.startsWith('/blog') ? (
        <link
          rel="alternate"
          type="application/rss+xml"
          title={blogRSSTitle}
          href={`${Astro.url.origin}/blog/rss.xml`}
        />
      ) : undefined
    }
    <slot name="head" />
  </head>
  <body>
    <Fragment set:html={html} />
    <script>
      import './layer';
      const checkMidnight = () => {
        document.documentElement.classList.toggle(
          'midnight',
          new Date().getHours() >= 21 || new Date().getHours() < 6,
        );
      };
      checkMidnight();
      setInterval(checkMidnight, 60 * 1000);
    </script>
  </body>
</html>
